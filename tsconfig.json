{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "experimentalDecorators": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true
    },
    "typeRoots": [
        "./node_modules/@types"
    ],
    "include": [
        "src/**/*.ts*"
    ]
}